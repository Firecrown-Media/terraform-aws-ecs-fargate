# Example terraform.tfvars file for simple ECS deployment
# Copy this to terraform.tfvars and modify values as needed

region      = "us-east-1"
name        = "my-simple-app"
environment = "dev"

# Container Configuration
container_image = "nginx:latest"
container_port  = 80
task_cpu        = 256
task_memory     = 512

# Service Configuration
desired_count = 2

# Health Check
health_check_path = "/"

# SSL Certificate (optional)
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Additional Tags
tags = {
  Project     = "SimpleECSApp"
  Environment = "dev"
  Owner       = "DevOps Team"
}